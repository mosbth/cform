<?xml version="1.0"?>
<ruleset name="PHPCS rule set">
    <description>Custom rule set.</description>

    <file>src</file>
    <file>test</file>
    <file>autoloader.php</file>

    <arg name="encoding" value="utf-8"/>
    <!--<arg name="extensions" value=".php"/>-->
    <!--<arg name="colors" value="1"/>-->
    <!--<arg name="warning-severity" value="5"/>-->

    <rule ref="PSR2">
        <exclude name="Squiz.Commenting.FileComment" />
        <exclude name="Squiz.ControlStructures.ControlSignature.NewlineAfterOpenBrace" />

        <!-- Below may be removed for a rougher check -->
        <exclude name="Squiz.WhiteSpace.SuperfluousWhitespace" />
        <exclude name="Squiz.WhiteSpace.ControlStructureSpacing.SpacingAfterOpen" />
        <exclude name="Squiz.WhiteSpace.ControlStructureSpacing.SpacingBeforeClose" />

        <!--
        <exclude name="PSR1.Classes.ClassDeclaration.MissingNamespace" />
        -->
    </rule>
    
</ruleset>
